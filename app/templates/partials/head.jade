head
	meta(charset='utf-8')
	meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, minimal-ui')
	meta(http-equiv='X-UA-Compatible' content='IE=edge')
	meta(name='imagetoolbar' content='no')
	meta(name='msthemecompatible' content='no')
	meta(name='cleartype' content='on')
	meta(name='HandheldFriendly' content='True')
	meta(name='format-detection' content='telephone=no')
	meta(name='format-detection' content='address=no')

	meta(name='apple-mobile-web-app-capable' content='yes')
	meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')
	link(href='/assets/icons/apple-touch-icon.png' rel='apple-touch-icon')
	link(href='/assets/icons/apple-touch-icon-precomposed.png' rel='apple-touch-icon-precomposed')
	link(sizes='57x57'   href='/assets/icons/apple-touch-icon-57x57.png'   rel='apple-touch-icon')
	link(sizes='114x114' href='/assets/icons/apple-touch-icon-114x114.png' rel='apple-touch-icon')
	link(sizes='60x60'   href='/assets/icons/apple-touch-icon-60x60.png'   rel='apple-touch-icon')
	link(sizes='120x120' href='/assets/icons/apple-touch-icon-120x120.png' rel='apple-touch-icon')
	link(sizes='72x72'   href='/assets/icons/apple-touch-icon-72x72.png'   rel='apple-touch-icon')
	link(sizes='144x144' href='/assets/icons/apple-touch-icon-144x144.png' rel='apple-touch-icon')
	link(sizes='76x76'   href='/assets/icons/apple-touch-icon-76x76.png'   rel='apple-touch-icon')
	link(sizes='152x152' href='/assets/icons/apple-touch-icon-152x152.png' rel='apple-touch-icon')

	link(sizes='196x196' href='/assets/icons/favicon-196x196.png' rel='icon' type='image/png')
	link(sizes='160x160' href='/assets/icons/favicon-160x160.png' rel='icon' type='image/png')
	link(sizes='96x96'   href='/assets/icons/favicon-96x96.png'   rel='icon' type='image/png')
	link(sizes='16x16'   href='/assets/icons/favicon-16x16.png'   rel='icon' type='image/png')
	link(sizes='32x32'   href='/assets/icons/favicon-32x32.png'   rel='icon' type='image/png')

	meta(name='application-name' content=pageTitle || page.title)
	meta(name='msapplication-tooltip' content=pageDescription || page.description)
	meta(name='msapplication-TileColor' content='#ffffff')
	meta(name='msapplication-TileImage' content='/assets/icons/mstile-large.png')
	meta(name='msapplication-starturl' content='https://csssr.github.io/csssr-project-template/')
	meta(name='msapplication-tap-highlight' content='no')
	meta(name='msapplication-square70x70logo' content='/assets/icons/mstile-small.png')
	meta(name='msapplication-square150x150logo' content='/assets/icons/mstile-medium.png')
	meta(name='msapplication-wide310x150logo' content='/assets/icons/mstile-wide.png')
	meta(name='msapplication-square310x310logo' content='/assets/icons/mstile-large.png')
	meta(name='msapplication-config' content='/assets/browserconfig.xml')

	//- http://realfavicongenerator.net/faq#why_ico_not_declared

	block head
	title#title= pageTitle || page.title
	meta(name='description' content=pageDescription || page.description)
	meta(name='keywords' content=pageKeywords || page.keywords)
	meta(name='copyright' content=pageCopyright || page.copyright)

	link(href='https://fonts.googleapis.com/css?family=Cuprum:400,700&subset=latin,cyrillic' rel='stylesheet')
	link(href='/assets/styles/common.css?' + timestamp rel='stylesheet')
